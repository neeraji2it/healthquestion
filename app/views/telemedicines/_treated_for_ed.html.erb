<!-- ["Viagra", "Cialis", "Levitra", "Other"] -->
<% if @medications.include? "Viagra" %>
	<div class="row hide" id="explain-other-treatment_viagra">
    <div class="row">
      <div class="large-12 columns">
        <a href="javascript:void(0)" class="left" id="backButton_15">❮</a>
      </div>
    </div>
    <hr/>
	  <div class="large-10 large-offset-1 columns">
      <div class="row">
        <div class="large-8 large-offset-2 columns">
          <h5>What was the dose of Viagra?</h5><br/>
          <div class="panel">
            <% count_1 = 0 %>
            <% DRUG_PREFERENCE["Viagra"].each do |strength, price| %>
              <%= raw "<hr>" unless count_1 == 0 %>
              <% count_1 += 1 %>
  						<label for="what-was-the-dose-of-Viagra"><input type="radio" name="What was the dose of Viagra?" value="<%= strength %>" class="what-was-the-dose-of-Viagra"><strong> <%= strength %></strong></label>
  					<% end %>
          </div>
	      </div>
      </div>
	  </div>
	</div>
<% end %>

